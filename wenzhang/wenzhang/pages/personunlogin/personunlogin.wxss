/* pages/person/person.wxss */
.userinfo {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  line-height: 80rpx;
  font-size: 18rpx;
  text-align: center;
}

.header {
  /* overflow: hidden; */
  width: 100%;
  height: 400rpx;
  background: linear-gradient(180deg, rgba(49, 88, 255, 1), rgba(122, 147, 255, 1));
  border-radius: 0px 0px 50px 50px;
}

.nick {
  float: left;
  font-size: 32rpx;
  font-weight: bold;
  width: 60%;
  line-height: 50rpx;
  color: #fff;

}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  display: block;
  border-radius: 50%;
  overflow: hidden;
  float: left;
  margin: 0 40rpx;

}

.info {
  padding-top: 20rpx;
  height: 70rpx;
}

.phone {
  font-size: 26rpx;
  color: #fff;
}
button.phone{
  width: 100%;
  background-color: transparent;
  float: left;
}
.three {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 60rpx;
  color: #fff;
  height: 56rpx;
}

.three view {
  width: 33.3%;
  text-align: center;
}

.siliao text,
.zhuanfa text,
.huoke text {
  display: block;
  width: 100%;
  text-align: center;
  line-height: 40rpx;
  font-size: 30rpx;
}

.vip {
  margin-top: 93rpx;
  width: 90%;
  height: 150rpx;
  background: linear-gradient(90deg, rgba(254, 192, 86, 1), rgba(255, 214, 106, 1));
  box-shadow: 1px 4px 14px 0px rgba(254, 202, 94, 0.36);
  border-radius: 10px;
  margin-left: 5%;
}
.vipwrap{
  width: 20%;
  height: 100%;
  text-align: center;
  float: left;
  line-height: 155rpx;
}
.vipimg{
  width: 48rpx;
  height: 48rpx;
}
.my{
  line-height: 150rpx;
}
.myvip{
  color: #3F321A;
  width: 55%;
  float: left;
  font-size: 32rpx;
  font-weight: 800;
}
.vipdetail{
  float: left;
  font-size:26rpx;
}
.jt{
  width: 50rpx;
  height: 100%;
  float: left;
  text-align: center;
  line-height: 150rpx;
}
.jt image{
  width: 15rpx;
  height: 27rpx;
}
.allbody{
  background-color: #fff;
}
.lists {
  width: 100% !important;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
}
button{
  width: 100% !important;
  display: block;
}
.iconimg{
  float: left;
  width: 15%;
  text-align: center;
  height: 100rpx;
}
.iconimg image{
  width: 39rpx;
  height: 37rpx;
  margin-top: 33rpx;
}
.first{
 margin-top: 70rpx;
}
.jt2{
  float: left;
  width: 10%;
  text-align: center;
  line-height: 100rpx;
}
.jt2 image{
  width: 15rpx;
  height: 27rpx;
}
.persontotal{
  float: left;
  width:70%;
  font-family: SourceHanSansCN-Bold;
  font-size: 30rpx;
  font-weight: bold;
  height: 100rpx;
  text-align: left;
}