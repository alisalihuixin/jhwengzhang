.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
}

.content {
  width: 80%;
  text-align: center;
  margin:0 auto;
  margin-bottom: 90rpx;
  margin-top: 50rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

button.bottom {
  width: 100% !important;
  border-radius: 20rpx;
  margin: 70rpx auto;
  font-size: 30rpx;
  display: block;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}